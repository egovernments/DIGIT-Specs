openapi: 3.0.3
info:
  title: Account/Tenant Management and Auth&Auth APIs
  description: API for managing tenants, subTenants, roles, actions, roleActions, and users.
  version: 1.0.0
servers:
  - url: http://localhost:8080/api
tags:
  - name: Tenant
    description: Individual or organization that uses a shared software application or service
  - name: Role
    description: Roles of the user
  - name: Action
    description: Action that can be performed 
  - name: User
    description: Operations about user

