  /user/_token:
    post:
      summary: Obtain a token
      description: Obtain an access token from Keycloak.
      requestBody:
        required: true
        content:
          application/x-www-form-urlencoded:
            schema:
              type: object
              properties:
                grant_type:
                  type: string
                  description: The type of grant being used.
                  example: password
                client_id:
                  type: string
                  description: The client ID.
                client_secret:
                  type: string
                  description: The client secret.
                username:
                  type: string
                  description: The username.
                token:
                  type: string
                  description: Token can be password/OTP 
                
      responses:
        '200':
          description: Token obtained successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  access_token:
                    type: string
                  expires_in:
                    type: integer
                  refresh_expires_in:
                    type: integer
                  refresh_token:
                    type: string
                  token_type:
                    type: string
                  'not-before-policy':
                    type: integer
                  session_state:
                    type: string
                  scope:
                    type: string
        '400':
          description: Bad request.
        '401':
          description: Unauthorized.

components:
  schemas:
    Tenant:
      type: object
      description: Details of a tenant
      required:
        - code
        - name
        - email
      properties:
        id:
          maxLength: 128
          minLength: 2
          type: string
          description: This unique identifier of the tenant
          readOnly: true
        code:
          type: string
          description: Unique code for the tenant
          minLength: 1
          maxLength: 20
          readOnly: true
        name:
          type: string
          description: Name of the tenant
          minLength: 1
          maxLength: 100
        email:
          type: string
          description: Email address of the tenant
          format: email
          minLength: 5
          maxLength: 100
        additionalAttributes:
          type: object
          description: Any additional key-value pair can be stored
        isActive:
          type: boolean
          description: Status indicating if the tenant is active
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'

    SubTenant:
      type: object
      description: Details of a subTenant
      required:
        - code
        - name
        - parentId
      properties:
        id:
          type: string
          format: uuid
          description: This unique identifier of the sub tenant
          readOnly: true      
        code:
          type: string
          description: Unique code for the subTenant
          minLength: 1
          maxLength: 20
        name:
          type: string
          description: Name of the subTenant
          minLength: 1
          maxLength: 100
        parentId:
          type: string
          description: Reference Id of the Tenant
          minLength: 1
          maxLength: 100
        additionalAttributes:
          type: object
          description: Any additional key-value pair can be stored
        isActive:
          type: boolean
          description: Status indicating if the subTenant is active
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'

    Role:
      type: object
      description: Details of a role
      required:
        - tenantId
        - code
        - isActive
      properties:
        id:
          type: string
          format: uuid
          description: This unique identifier of the Role
          readOnly: true      
        tenantId:
          type: string
          description: ID of the tenant to which the role belongs
          minLength: 1
          maxLength: 50
        code:
          type: string
          description: Unique code for the role
          minLength: 1
          maxLength: 20
        isActive:
          type: boolean
          description: Status indicating if the role is active
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'

    Action:
      type: object
      description: Details of an action
      required:
        - id
        - uri
        - description
        - isActive
        - tag
        - accessType
      properties:
        id:
          type: string
          format: uuid
          description: Unique ID for the action
        uri:
          type: string
          description: URI of the action
          minLength: 1
          maxLength: 100
        description:
          type: string
          description: Description of the action
          minLength: 1
          maxLength: 255
        isActive:
          type: boolean
          description: Status indicating if the action is active
        tag:
          type: array
          items:
            type: string
          description: Tags associated with the action
          minItems: 1
        accessType:
          type: array
          items:
            type: string
            enum:
              - OPEN
              - PROTECTED
          description: Access types for the action
          minItems: 1
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'


    RoleAction:
      type: object
      description: Details of a roleAction
      required:
        - tenantId
        - roleCode
        - actionId
      properties:
        id:
          type: string
          description: Unique ID for the action
          format: uuid
        tenantId:
          type: string
          description: ID of the tenant to which the roleAction belongs
          minLength: 1
          maxLength: 50
        roleCode:
          type: string
          description: Code of the role associated with the roleAction
          minLength: 1
          maxLength: 20
        actionId:
          type: string
          description: ID of the action associated with the roleAction
          minLength: 1
          maxLength: 20
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'

    User:
      type: object
      description: Details of a user
      required:
        - tenantId
        - userName
        - loginType
        - roles
      properties:
        id:
          type: string
          description: Unique ID for the action
          format: uuid  
        tenantId:
          type: string
          description: ID of the tenant to which the user belongs
          minLength: 1
          maxLength: 50
        userName:
          type: string
          description: Username of the user
          minLength: 1
          maxLength: 50
        email:
          type: string
          description: User email address
          minLength: 1
          maxLength: 50
        emailVarified:
          type: boolean
          description: True if email address is varified 
        mobile:
          type: string
          description: User mobile number
          minLength: 1
          maxLength: 50
        mobileVarified:
          type: boolean
          description: True if mobile no is varified 
        loginType:
          type: string
          description: Type of login for the user
          enum:
            - Password
            - OTP
            - 2FA
        loginCount:
          type: number
          description: Store no of login
          minLength: 1
          maxLength: 20
        roles:
          type: array
          description: Roles assigned to the user
          items:
            type: object
            required:
              - role
              - tenant
            properties:
              role:
                type: string
                description: Role assigned to the user
                minLength: 1
                maxLength: 20
              tenant:
                type: array
                description: Tenant associated with the role
                items:
                  type: string
                
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'
          
    UserCredentials:
      type: object
      description: Details of a user
      required:
        - tenantId
        - userId
        - password
      properties:
        id:
          type: string
          description: Unique ID for the action
          format: uuid  
        tenantId:
          type: string
          description: ID of the tenant to which the user belongs
          minLength: 1
          maxLength: 50
        userId:
          type: string
          description: Username of the user
          minLength: 1
          maxLength: 50
        password:
          type: string
          description: User email address
          minLength: 1
          maxLength: 50
                
        auditDetails:
          $ref: 'https://raw.githubusercontent.com/egovernments/DIGIT-Specs/grouped-service-contracts/Common%20Services/common-contract.yaml#/components/schemas/AuditDetails'
    
    
    
